<!DOCTYPE html>

<html dir="ltr" lang="en">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <%- include('./partials/head.ejs')%>
  
  <body>
    <%- include('./partials/header.ejs')%>
 
    <h1 class="text-center"><%= title %></h1>

    <!--
      Getting data for products
    -->
    <div class="container-fluid  ">
      <div class="row ">
        <% products.forEach(function(product){%>
        <div class="col-sm-6 col-lg-3 border-0  mb-4">
         <div class="card">
         <div class="">
        

         <a href="/product/<%= product.id%>">
          <img class="img-container img-fluid mx-auto  d-block " src="<%=product.thumbnail%>">
         </a>
     
         </div>
  <div class="card-body">
    
  <div class="d-flex flex-row text-center">
    <i class="fa fa-desktop mt-1 mx-2"></i> 
      <h6 class="card-title text-center">   <%=product.title %></h6>
  </div>

    
  </div>
         </div>
        </div>
        <%  });%>
      </div>
    </div>
