<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs')%>
</head>
<body>
  <%- include('./partials/header.ejs')%>
  <div class="container mt-4">
    <h1 class="text-center mb-2"> All Categories</h1>
    <div class="row row-cols-1 row-cols-md-4 row-cols-xl-5">
        <% for(var i = 0; i < products.length; i++){ %>
            <div class="col">
                <div class="card mb-3 p-3 d-flex flex-column justify-content-between align-items-center">
                    <div class="card-body d-flex flex-column justify-content-between align-items-center">
                        <i class="fa fa-certificate p-3 rounded-circle text-white bg-info"></i>
                        <a href="#" class="mt-3 text-dark"><%= products[i] %></a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

</body>
</html>